{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "lib": ["esnext", "DOM"],
        "types": ["svelte", "@types/node"],
        "noImplicitAny": true,
        "noImplicitThis": false,
        "strict": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@core/*": ["./src/game/core/*"],
            "@utils/*": ["./src/game/utils/*"]
        }
    },
    "exclude": ["node_modules/", "node_modules.nosync/"]
}
